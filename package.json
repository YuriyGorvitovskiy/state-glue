{
    "name": "state-glue",
    "version": "1.0.0",
    "description": "Typescript implementation of the Model",
    "main": "build/state-glue.js",
    "scripts": {
        "compile": "tsc",
        "format": "prettier --write \"src/**/*.ts\" .prettierrc jest.config.js package.json tsconfig.json tslint.json",
        "lint": "tslint -p tsconfig.json",
        "test": "jest --coverage",
        "docs": "typedoc --theme minimal --out ./build/docs --exclude **/*.test.ts --readme README.md ./src",
        "webpack": "webpack",
        "build": "npm run format && npm run compile",
        "check": "npm run format && npm run compile && npm run lint && npm run test",
        "package": "npm run format && npm run compile && npm run lint && npm run docs && npm run webpack"
    },
    "author": "Yuriy Gorvitovskiy",
    "license": "ISC",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "23.3.12",
        "jest": "23.6.0",
        "prettier": "1.15.3",
        "ts-jest": "23.10.5",
        "ts-loader": "5.3.3",
        "ts-node": "7.0.1",
        "tslint": "5.12.1",
        "tslint-config-prettier": "1.17.0",
        "typedoc": "0.14.2",
        "typescript": "3.2.2",
        "webpack": "4.28.4",
        "webpack-cli": "3.2.1"
    }
}
